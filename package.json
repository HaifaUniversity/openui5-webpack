{
  "private": true,
  "name": "openui5-webpack",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "publish": "lerna publish",
    "test": "lerna run test",
    "lint": "eslint . --cache",
    "prepublish": "npm run build",
    "build": "lerna run build"
  },
  "devDependencies": {
    "chalk": "^2.4.2",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-webpack": "^1.2.5",
    "eslint-plugin-import": "^2.17.2",
    "lerna": "^3.13.3",
    "nyc": "^14.0.0"
  },
  "eslintConfig": {
    "extends": [
      "webpack"
    ],
    "rules": {
      "class-methods-use-this": 0,
      "prefer-destructuring": 0,
      "no-param-reassign": 0
    }
  },
  "nyc": {
    "exclude": [
      "**/coverage/**",
      "**/dist/**",
      "**/lib/**",
      "**/html/assets/**",
      "**/test/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "all": true
  }
}
